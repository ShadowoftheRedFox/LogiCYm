<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.shape.Circle?>

<Pane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pjava.src.UI.components.UISchema"
      prefWidth="120.0" prefHeight="80.0" minWidth="120.0" minHeight="80.0">

   <!-- Rectangle principal du schéma -->
   <Rectangle fx:id="mainRectangle"
              x="10.0" y="10.0"
              width="100.0" height="60.0"
              fill="#E8E8E8"
              stroke="#333333"
              strokeWidth="2.0"
              arcWidth="5.0"
              arcHeight="5.0" />

   <!-- Label avec le nom du schéma -->
   <Label fx:id="schemaNameLabel"
          layoutX="15.0" layoutY="25.0"
          prefWidth="90.0" prefHeight="30.0"
          text="Schema"
          alignment="CENTER"
          textAlignment="CENTER"
          style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #333333;"
          wrapText="true" />

   <!-- Container pour les pins d'entrée (côté gauche) -->
   <Pane fx:id="inputPinsContainer" layoutX="0.0" layoutY="10.0" prefWidth="20.0" prefHeight="60.0" />

   <!-- Container pour les pins de sortie (côté droit) -->
   <Pane fx:id="outputPinsContainer" layoutX="100.0" layoutY="10.0" prefWidth="20.0" prefHeight="60.0" />

</Pane>